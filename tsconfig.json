{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@env": ["./src/core/env.js"]
      },
      "esModuleInterop": true,
      "checkJs": true
    },
    "exclude": [
      "plugins",
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "docs",
      "cli",
      "android",
      "ios",
      "lint-staged.config.js",
      "tailwind.config.js"
    ]
  }
  